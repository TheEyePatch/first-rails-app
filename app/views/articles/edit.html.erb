<section class = 'content-container' id = 'edit'>
    <%= form_with scope: :article, url: update_article_path, method: :put, local: true do |f| %>
        <div>
            <% if @article.errors.any? %>
                <ul>
                    <% @article.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <li><%= 'Error'%></li>
                    <% end %>
                </ul>
            <% end %>
        </div>
        <div>
            <%= @article.id %>
            <%= f.label 'Title'%><br>
            <%= f.text_field :name, class: 'title-input'%>
        </div>

        <div>
            <%= f.label 'Body' %><br>
            <%= f.text_area :body, size: '80x20' %>
        </div>
        <div class = 'submit-btn'>
            <%= f.submit 'Edit'%>
        </div>
    <% end %>
</section>