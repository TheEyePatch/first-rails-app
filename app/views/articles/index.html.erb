    <section class = 'content-container' id = 'index'>
         <% @articles.each do |article| %>
        <article class = 'article'>
            <div class = 'article-title'>
                <h2>Title| <%= link_to article.name , show_article_path(article)%></h2>
                <p class = 'date-created'>Last update: <%= article.updated_at.strftime("%b %d, %Y at %I:%M%P")%></p>
            </div>
            <p><%= article.body%></p>
            <%= button_to "Delete Article", delete_article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this article? #{article.name}" }, class: 'delete' %>
        </article>
        
        <% end %>
</section>