    <section class = 'content-container' id = 'index'>
         <% @articles.each do |article| %>
        <article class = 'article'>
            <div class = 'article-title'>
                <h2><%= article.id%>| Title: <%= link_to article.name , show_article_path(article)%></h2>
                <p class = 'date-created'><%= article.created_at%></p>
            </div>
            <p><%= article.body%></p>
            <%= link_to "Delete Article", delete_article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this article? #{article.name}" } %>
        </article>
        
        <% end %>
</section>