
<body>
    <main id = 'new'>
    <%= form_with scope: :article, url: articles_path, local: true do |f| %>
            <div>
                <% if @article.errors.any? %>
                <ul>
                    <% @article.errors.full_messages.each do |message| %>
                        <li><%= message.upcase %></li>
                    <% end %>
                </ul>
                <% end %>
            </div>
            <div>
                <%= f.label 'Title'%><br>
                <%= f.text_field :name%>
            </div>
            <div>
                <%= f.label 'Body' %><br>
                <%= f.text_area :body %>
            </div>
            <div class = 'submit-btn'>
                <%= f.submit 'Create Article' %>
            </div>
        <% end %>
    </main>
</body>
