
    <section class = 'content-container' id = 'new'>
        <h1>Create New Article</h1>
        <%= form_with scope: :article, url: articles_path, local: true do |f| %>
                               
                <% flash.each do |type, msg| %>
                    <div class = 'error-container'>
                        <% msg.each do |error| %>
                            <div class = 'error'>
                                <strong><%= error%>!</strong> 
                            </div>
                        <% end %>
                        <a href = '#new'><button>Ok</button></a>
                    </div>
                <% end %>
                 
                <div>
                    <%= f.label 'Title'%><br>
                    <%= f.text_field :name, class: 'title-input'%>
                </div>
                <div>
                    <%= f.label 'Body' %><br>
                    <%= f.text_area :body , size: '80x20'%>
                </div>
                <div class = 'submit-btn'>
                    <%= f.submit 'Create Article', class: 'submit-button' %>
                </div>
            <% end %>
    </section>

